<p id="notice"><%= notice %></p>

<% if current_user.try(:admin?) %>

<h1>Listing Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Line1</th>
      <th>Line2</th>
      <th>Line2</th>
      <th>Postcode</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.line1 %></td>
        <td><%= address.line2 %></td>
        <td><%= address.line2 %></td>
        <td><%= address.postcode %></td>
        <td><%= address.user %></td>
        <td colspan=3>
        <%= link_to 'Show', address %>
        <% if current_user.try(:admin?) %>
          <%= link_to 'Edit', edit_address_path(address) %>
          <%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %>
        <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Address', new_address_path %>
<% end %>