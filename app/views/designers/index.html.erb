<p id="notice"><%= notice %></p>

<h1>Listing Designers</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Website</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @designers.each do |designer| %>
      <tr>
        <td><%= designer.name %></td>
        <td><%= designer.website %></td>
        <td colspan="3">
          <% if current_user.try(:admin?) %>
            <%= link_to 'Show', designer %>
            <%= link_to 'Edit', edit_designer_path(designer) %>
            <%= link_to 'Destroy', designer, method: :delete, data: { confirm: 'Are you sure?' } %>
          <% end %> 
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.try(:admin?) %>
  <%= link_to 'New Designer', new_designer_path %>
<% end %>

